{
  "name": "kanel",
  "version": "0.7.0",
  "keywords": [
    "postgresql",
    "schema",
    "typescript"
  ],
  "repository": "git@github.com:kristiandupont/kanel.git",
  "license": "MIT",
  "author": {
    "name": "Kristian Dupont",
    "url": "http://www.kristiandupont.com"
  },
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "bin": {
    "kanel": "./bin/kanel"
  },
  "files": [
    "build/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "yarn eslint . -f visualstudio --report-unused-disable-directives --ext .js,.ts",
    "run-example": "node build/src/cli -c ./example/.kanelrc",
    "start-example-db": "docker run -d --name dvd-rental -p 54321:5432 kristiandupont/dvdrental-image",
    "stop-example-db": "docker stop dvd-rental",
    "test": "yarn jest",
    "version": "yarn build"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.(js|ts)"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    }
  },
  "dependencies": {
    "@kristiandupont/recase": "^1.1.1",
    "chalk": "^4.1.0",
    "extract-pg-schema": "^1.7.2",
    "knex": "^0.21.5",
    "optionator": "^0.9.1",
    "pg": "^8.3.3",
    "ramda": "^0.27.1",
    "rmfr": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@types/knex": "0.16.1",
    "@types/node": "14.11.2",
    "@types/ramda": "0.27.18",
    "@typescript-eslint/parser": "4.5.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.13.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.6.3",
    "np": "6.5.0",
    "prettier": "2.1.2",
    "ts-jest": "26.4.0",
    "typescript": "4.0.3"
  },
  "np": {}
}
